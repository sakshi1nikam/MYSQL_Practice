Return big country whose population is >= 25000000 and area >= 3000000  (25 milion and 3 milion)

SELECT name, population, area
FROM World
WHERE EXISTS (
SELECT population, area
WHERE (population > 25000000) OR (area > 3000000)
)
//
SELECT name , population ,area
FROM world
WHERE population>=25000000 OR area >=3000000;
